<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Qui est le plus grand roi de tout l'univers"
        android:textSize="40sp"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="L'Eternel des armÃ©es"
        android:textSize="40sp"
        android:layout_below="@id/flashcard_question"
        android:visibility="gone"
        tools:ignore="TextSizeCheck" />

    <ImageButton
        android:id="@+id/button_add"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Ajouter une carte"
        android:src="@drawable/ic_add" />
</RelativeLayout>